{
  "camera": {
    "width": 640,
    "height": 480,
    "fps": 30,
    "auto_exposure": true,
    "exposure_value": 100,
    "gain": 50,
    "enable_depth": true,
    "depth_units": 0.001,
    "visual_preset": "high_accuracy"
  },
  "features": {
    "type": "orb",
    "max_features": 1500,
    "quality_threshold": 0.01,
    "match_ratio": 0.75,
    "min_matches": 20,
    "enable_multi_method": true,
    "spatial_filtering": true
  },
  "pose": {
    "min_triangulation_points": 8,
    "ransac_threshold": 2.0,
    "ransac_confidence": 0.99,
    "max_reprojection_error": 2.0,
    "keyframe_distance_threshold": 0.1,
    "keyframe_angle_threshold": 0.1,
    "enable_scale_estimation": true,
    "motion_validation": true
  },
  "loop": {
    "min_loop_distance": 2.0,
    "similarity_threshold": 0.8,
    "geometric_verification": true,
    "max_loop_candidates": 5
  },
  "visualization": {
    "enable_3d_plot": true,
    "enable_feature_display": true,
    "enable_match_display": true,
    "enable_live_feed": true,
    "enable_3d_markers": true,
    "enable_motion_vectors": true,
    "update_frequency": 5,
    "plot_window_size": 500
  },
  "live_feed": {
    "show_coordinate_system": true,
    "show_trajectory_overlay": true,
    "show_statistics": true,
    "show_distance_indicators": true,
    "coordinate_axis_length": 0.1,
    "trajectory_max_points": 100
  },
  "tracking": {
    "max_motion_per_frame": 0.3,
    "min_motion_threshold": 0.001,
    "enable_motion_filtering": true,
    "enable_quality_assessment": true,
    "confidence_threshold": 0.2
  },
  "logging": {
    "save_images": false,
    "save_features": true,
    "save_depth": true,
    "save_trajectory": true,
    "compression_level": 6,
    "auto_export": false
  },
  "log_level": "INFO",
  "data_dir": "data",
  "log_dir": "logs"
}